<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/backgroundImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/paginainicial" />

        <Button
            android:id="@+id/btnJogar"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="260dp"
            android:background="@drawable/button_backgroun"
            android:text="Iniciar"
            android:textColor="#ffffff"
            android:textSize="45sp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/btnTrofeus"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnJogar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="17dp"
            android:background="@drawable/button_backgroun"
            android:text="Trofeús"
            android:textColor="#ffffff"
            android:textSize="35sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnCreditos"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnTrofeus"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="85dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="86dp"
            android:background="@drawable/button_backgroun"
            android:text="Créditos"
            android:textColor="#ffffff"
            android:textSize="23sp"
            android:textStyle="bold" />


    </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>